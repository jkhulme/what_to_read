html
  head
    link(rel="stylesheet", href="static/css/bootstrap.min.css")
    link(rel="stylesheet", href="static/css/what_to_read.css")

  body
    .container
      .row.col-md-6.col-md-offset-3.text-center
        h1 Your next ebook
      .row
        .col-md-7
          .ebook-cover
            img.img-responsive.cover-img.center-block(src=book.image)

        .col-md-5.text-left
          .ebook-info
            .row
              h3= book.title
            .row
              h5= " & ".join(book.authors)
            .row
              p= book.description
            .row
              a#purchase_link(href=book.purchase_link)
                button.btn.btn-success= book.price
      .row.col-md-4.col-md-offset-4.text-center
        a(href="/")
          button.btn.btn-primary.btn-lg Request New Book


  script(src="static/js/jquery-2.1.1.min.js")
  script(src="static/js/bootstrap.min.js")
  script(src="static/js/what_to_read.js")
